FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        libssl-dev && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /opt/popcache
COPY pop .
COPY config.json .
RUN chmod +x pop

ENTRYPOINT ["./pop"]
